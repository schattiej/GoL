import Phaser, { Data } from 'phaser'
import DataMaker from '../gamelogic/DataMaker.js'
import CONFIG from '../config.js'
import UpgradedContainer from '../gamelogic/UpgradedContainer.js'
/*
*
* Adds the option of selecting different starting events. This changes the requirements for a successful event and changes what decks you have to use
* and also prompts the user to select an option. If the user is unsure, a random event will be chosen.
* 
*/
class gameModeSelect extends UpgradedContainer {
    constructor (scene) {
        const x = CONFIG.DEFAULT_WIDTH
        const y = CONFIG.DEFAULT_HEIGHT
        super(scene)

        this.width = CONFIG.DEFAULT_WIDTH * 0.8
        this.height = CONFIG.DEFAULT_HEIGHT * 0.8

        Phaser.Display.Bounds.CenterOn(this, CONFIG.DEFAULT_WIDTH * 0.5, CONFIG.DEFAULT_HEIGHT * 0.5)

    }
}